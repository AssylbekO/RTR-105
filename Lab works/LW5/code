#include <stdio.h>
#include <string.h>
#include <math.h>
void Array_sort(char arr[] , int n)
{ 
   
    int i=0 , j=0 , temp=0;

    for(i=0 ; i<n ; i++)
    {
        for(j=0 ; j<n-1 ; j++){
        
            if(arr[j]>arr[j+1]){
            
                char temp      = arr[j];
                arr[j]    = arr[j+1];
                arr[j+1]  = temp;
            }
        }
    }
    
}
char max_min(char arr[], int n,unsigned char *max, unsigned char *min)
{
    int i = 0;
    for(i=0; i<n; i++)
    {
           
		   if(arr[i]>*max)
		 {
		    *max=arr[i];
		 }
		    if(arr[i]<*min)
		 {
		  *min=arr[i];
		        
	     }  
        
    }
}

     
          
char average( char arr[], int n, float *avg ) 
{
    int i = 0;
    for (i = 0 ; i< n ;i++){
    *avg += arr[i];}
}
    
    char Find_median(char arr[] , int n, char median)
 
{
    int n2=n/2;
    
    
    if(n%2 == 0)
    {
        median = arr[n2-1];
        printf("\n\nThe median is : %c\n",median);
    }
    
    else{
        median = arr[n/2];
        printf("\n\nThe median is : %c\n",median);
    }
    
}


void main()
{
    char arr[10000], cn [1000];char median, b;
    unsigned char max = 0, min = 255;
    
    printf("1) Dear user, please choose your string:\n");
    scanf(" %[^\n\n]", arr);
    
    int n = strlen(arr);
    Array_sort(arr, n);
    printf("2)  your the sorted string is: %s \n", arr);
    
    printf("3)  your corresponding string in ASCII is: \n");
    int i = 0;
    for(i; i < n; i++){
        printf("%d ", arr[i]);
    }
    printf("\n");
  
    max_min(arr, n, &max, &min);
    
    printf("\nmaximum of the array is : '%c'\n",max);
    printf("minimum of the array is : '%c'",min);
    
    
   
    if( n%2 == 0)
    {
        median = arr[n/2-1];
        printf("\n\nThe median is : %c\n",median);
    }
  
    else{
        median = arr[n/2];
        printf("\n\nThe median is : %c\n",median);
    }
    
   
   
    
    }

