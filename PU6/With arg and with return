#include <stdio.h>

int forth(int num);
int main()
{
    int num;
  printf ("Enter a positive number: ");
  scanf ("%d", &num);

  if (num % 2 == 0)
    {
      printf ("%d is even.", num);
    }
  else
    {
      printf ("%d is odd.", num);
    }
    return 0;

}
int forth (int num)
{
    if (num % 2 == 0){
        return 1;
    }
    else {
        return 0;
    }
    
}
