#include <stdio.h>

void third(int num);
int main() {
    int num;
    printf ("Enter a positive number: ");
    scanf ("%d", &num);
    third(num);
    return 0;
    
}
void third (int num)
{
    if (num % 2 == 0)
    {
      printf ("%d is even.", num);
    }
  else
    {
      printf ("%d is odd.", num);
    }
}
