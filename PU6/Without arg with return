#include <stdio.h>

int second();
int main()
{
    int num;
    num = second();
    if (num % 2 == 0)
    {
      printf ("%d is even.", num);
    }
  else
    {
      printf ("%d is odd.", num);
    }
}
  int second()
  {
    int num;
    printf ("Enter a positive number: ");
    scanf ("%d", &num);
  
    return num;
  }
